<GridPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.practical7.ChoiceDialog">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="125.0" prefHeight="125.0" vgrow="NEVER" />
      <RowConstraints minHeight="75.0" prefHeight="75.0" vgrow="NEVER" />
   </rowConstraints>
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="150.0" prefWidth="300.0" text="Do you want to play against AI or Human?" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
      <HBox prefHeight="100.0" prefWidth="300.0" GridPane.rowIndex="1">
         <children>
            <Button fx:id="aiBut" contentDisplay="CENTER" minWidth="110.0" mnemonicParsing="false" text="AI">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="humanBut" contentDisplay="CENTER" layoutX="10.0" layoutY="22.0" minWidth="110.0" mnemonicParsing="false" text="Human">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</GridPane>
